extends layouts/base

block content

  header#head.secondary

  // container
  .container
    ol.breadcrumb
      li
        a(href='/') Home
      li.active Change avatar
    .row
      // Article main content
      article.col-xs-12.maincontent
        header.page-header
          h1.page-title Change avatar
        .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
          .panel.panel-default
            .panel-body
              h3.thin.text-center Change avatar
              p.text-center.text-muted
                | Revenir Ã  votre 
                a(href='/profil') Profil
                |  
              hr

              if (error)
                p.error #{error.message}

            
              form(action='/upload', method='post', enctype='multipart/form-data')
                .row.top-margin
                  .col-sm-12                   
                    label.col-lg-2.control-label  Avatar
                    .col-lg-6
                      input.form-control-file(type='file', accept='image/*', name='photo')
                hr    
                .row
                  .col-lg-8

                  .col-lg-4.text-right
                    button.btn.btn-action(type='submit') Upload
      // /Article
  // /container

  footer#footer

block scripts
  script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
  script(src='http://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js')
  script(src='/lib/headroom.min.js')
  script(src='/lib/jQuery.headroom.min.js')
  script(src='/lib/template.js')
  script(src="/lib/jquery-3.3.1.min.js")
  
